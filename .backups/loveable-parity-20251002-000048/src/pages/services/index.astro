---
import ServicesBase from "../../layouts/ServicesBase.astro";
import { SERVICES } from "../../data/services";
---
<ServicesBase title="Services | Postal Systems" description="USPS-approved commercial mailbox supply & installs across San Diego County.">
  <!-- Hero -->
  <section class="relative pt-24 pb-16 bg-gradient-to-b from-white to-[hsl(var(--secondary))]">
    <div class="container text-center">
      <p class="eyebrow">USPS-approved installs</p>
      <h1 class="text-4xl md:text-5xl font-bold text-[hsl(var(--postal-navy))] mb-3">Our Services</h1>
      <p class="lead max-w-2xl mx-auto">
        CBUs, 4C mailboxes, parcel lockers, repairs, ADA compliance, and more â€” installed with USPS approval.
      </p>
    </div>
  </section>

  <!-- Trust bar -->
  <section class="section-muted py-6">
    <div class="container flex flex-wrap gap-4 items-center justify-center">
      <span class="trust-badge">USPS Approved</span>
      <span class="trust-badge">Licensed & Insured</span>
      <span class="trust-badge">15+ Years</span>
    </div>
  </section>

  <!-- Services grid -->
  <section class="py-14 bg-white">
    <div class="container grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {SERVICES.map((s) => (
        <div class="card card-padded hover:shadow-lg hover:-translate-y-1 transition-all duration-300 flex flex-col">
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-[hsl(var(--postal-navy))] mb-2">{s.name}</h3>
            <p class="text-[hsl(var(--muted-foreground))] text-sm leading-relaxed">{s.blurb}</p>
          </div>
          <div class="mt-6">
            <a href={`/services/${s.slug}`} class="btn-hero-primary w-full">View Service</a>
          </div>
        </div>
      ))}
      <div class="card card-padded hover:shadow-lg hover:-translate-y-1 transition-all duration-300 flex flex-col">
        <div class="flex-1">
          <h3 class="text-xl font-semibold text-[hsl(var(--postal-navy))] mb-2">See Service Areas</h3>
          <p class="text-[hsl(var(--muted-foreground))] text-sm leading-relaxed">Find coverage near you.</p>
        </div>
        <div class="mt-6">
          <a href="/service-areas" class="btn-hero-secondary w-full">Browse areas</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Gradient CTA like home -->
  <section class="py-16 bg-gradient-to-r from-[hsl(var(--postal-navy))] to-[hsl(var(--postal-red))] text-white text-center">
    <div class="container">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Ready to upgrade your mailboxes?</h2>
      <p class="text-white/90 max-w-2xl mx-auto mb-6">Get a professional, USPS-approved installation. Contact us for your free quote.</p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a href="/contact" class="inline-flex items-center justify-center gap-2 bg-white text-[hsl(var(--postal-navy))] px-8 py-4 rounded-xl font-semibold hover:bg-white/90">Get a Quote</a>
        <a href="tel:6194614787" class="inline-flex items-center justify-center gap-2 border-2 border-white px-8 py-4 rounded-xl font-semibold hover:bg-white hover:text-[hsl(var(--postal-navy))]">Call Now</a>
      </div>
    </div>
  </section>
</ServicesBase>
