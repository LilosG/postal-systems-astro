---
import Base from "@/layouts/Base.astro";
import LovableLayout from "../../layouts/LovableLayout.astro";
const pageTitle = typeof title !== "undefined" ? title : "Postal Systems";
---
<LovableLayout title={pageTitle}>
<Base title="4C Horizontal Mailboxes">
  <section class="mx-auto max-w-6xl py-10">
    <h1 class="text-3xl font-semibold tracking-tight">4C Horizontal Mailboxes</h1>
    <p class="mt-2 opacity-80">New 4C mailrooms and retrofits with secure tenant access and parcel lockers.</p>
    <ul class="mt-6 list-disc pl-6 space-y-1">
      <li>Layout, cut-in, and wall framing</li>
      <li>Parcel locker sizing and placement</li>
      <li>Finish matching and manufacturer sourcing</li>
    </ul>
    <div class="mt-8"><a href="/contact" class="rounded-md border px-4 py-2">Request a Quote</a></div>
  </section>
</Base>
</LovableLayout>
