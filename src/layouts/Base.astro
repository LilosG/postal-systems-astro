---
import "@/styles/tailwind.css";

const siteName = "San Diego Commercial Mailbox";

export interface Props {
  title?: string;
  canonical?: string;
  description?: string;
}
const { title = siteName, canonical, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {canonical && <link rel="canonical" href={canonical} />}
    {description && <meta name="description" content={description} />}
    <slot name="head" />
  </head>
  <body class="antialiased text-gray-900">
    <header class="mx-auto max-w-6xl flex items-center justify-between py-4">
      <a href="/" class="font-semibold">{siteName}</a>
      <nav>
        <a href="/services" class="px-3">Services</a>
        <a href="/industries" class="px-3">Industries</a>
        <a href="/contact" class="px-3">Contact</a>
      </nav>
    </header>
    <hr />
    <main><slot /></main>
    <footer class="mx-auto max-w-6xl py-10 text-sm opacity-70">
      Â© {new Date().getFullYear()} {siteName}
    </footer>
  </body>
</html>
