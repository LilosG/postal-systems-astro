---
import Base from "@/layouts/Base.astro";
---
<Base title="Thank You — San Diego Commercial Mailbox">
  <Fragment slot="head">
    <meta name="description" content="Thank you for contacting San Diego Commercial Mailbox." />
  </Fragment>
  <fragment slot="head"><meta name="robots" content="noindex, nofollow" /></fragment>
  <section class="mx-auto max-w-6xl py-16">
    <h1 class="text-3xl font-semibold tracking-tight">Thanks — we’ve got it.</h1>
    <p class="mt-3 opacity-80">Your message was received. We’ll get back to you shortly.</p>
    <div class="mt-8 flex gap-3">
      <a href="/" class="rounded-md border px-4 py-2">Back to Home</a>
      <a href="/services" class="rounded-md border px-4 py-2">View Services</a>
    </div>
  </section>
</Base>
