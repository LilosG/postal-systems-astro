---
import SiteFrame from "../../layouts/SiteFrame.astro";
import HeroSplit from "../../components/HeroSplit.astro";
import CTASection from "../../components/CTASection.astro";
import { CITIES } from "../../data/cities";

type AreaItem = { href: string; label: string };
const areas: AreaItem[] =
  (CITIES as any[])
    .map((c) => ({ href: `/service-areas/${c.slug}`, label: String(c.name) }))
    .sort((a, b) => a.label.localeCompare(b.label));

const pageTitle = "Service Areas | Postal Systems";
---
<SiteFrame title={pageTitle}>
  <HeroSplit title="Service Areas" imageSrc="/images/hero.svg" />

  <section class="py-10">
    <div class="container mx-auto max-w-6xl px-4">
      <h2 class="text-xl md:text-2xl font-semibold text-center">Browse Areas</h2>
      <p class="text-slate-600 text-center mt-2">Coverage across San Diego County.</p>

      <div class="mt-6 grid gap-3 sm:grid-cols-2 md:grid-cols-3">
        {areas.map((a: AreaItem) => (
          <a href={a.href} class="block rounded-xl border border-slate-200 bg-white p-4 hover:shadow-md transition">
            <span class="font-medium">{a.label}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <CTASection />
</SiteFrame>
