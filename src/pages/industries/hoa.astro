---
import LovableLayout from "../../layouts/LovableLayout.astro";
import Base from "../../layouts/Base.astro";
const title = "HOA | San Diego Commercial Mailbox";
const description = "HOA services and capabilities.";
const jsonLd = { "@context": "https://schema.org", "@type": "WebPage", "name": "HOA", "url": Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined };
---
<LovableLayout title="HOA | Postal Systems">
<Base {title} {description} jsonLd={jsonLd}>
  <nav aria-label="Breadcrumb" class="mb-4 text-sm">
    <a href="/" class="opacity-70 hover:opacity-100">Home</a>
    <span class="px-2">/</span>
    <a href="/industries" class="opacity-70 hover:opacity-100">Industries</a>
    <span class="px-2">/</span>
    <span class="opacity-100">HOA</span>
  </nav>
  <h1 class="text-3xl font-semibold mb-4">HOA</h1>
  <p class="opacity-80 mb-6">Unified layout, consistent SEO scaffolding.</p>
</Base>
</LovableLayout>
