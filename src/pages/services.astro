---
import Base from "@/layouts/Base.astro";

const services = [
  { title: "Cluster Box Units (CBUs)", desc: "Turnkey CBU supply, install, and USPS approval for communities and business parks." },
  { title: "4C Horizontal Mailboxes", desc: "New 4C mailrooms and retrofits with secure tenant access and parcel lockers." },
  { title: "Parcel Lockers", desc: "Secure parcel delivery for apartments, offices, and mixed-use properties." },
  { title: "Pedestal & Wall-Mounted Boxes", desc: "Neighborhood CBUs, HOA upgrades, wall sets, and replacements." },
  { title: "Repairs & Lock Changes", desc: "USPS-approved maintenance, lock/keying, tenant turnover, and vandalism repair." },
  { title: "ADA-Compliant Installs", desc: "Accessibility-aware layouts and installs that meet USPS and ADA guidelines." }
];

const faqs = [
  { q: "Do you coordinate with USPS?", a: "Yes. We confirm locations, obtain approval, and coordinate final inspection/handover." },
  { q: "Do you repair and set anchors?", a: "Yes. We handle site prep, anchors, concrete pads, and secure mounting for CBUs and 4C." },
  { q: "Can you match existing units?", a: "We source matching finishes and box configurations when available from manufacturers." },
  { q: "Are 4C mailboxes required?", a: "For new construction and many retrofits, 4C equipment is the standard for USPS compliance." },
  { q: "How fast can we schedule?", a: "Most projects are scheduled within 1â€“2 weeks; rush options available depending on stock." }
];
---

<Base title="Services">
  <section class="mx-auto max-w-6xl py-10">
    <h1 class="text-3xl font-semibold tracking-tight">Mailbox Services</h1>
    <p class="mt-2 opacity-80">USPS-approved installs, upgrades, and maintenance across San Diego County.</p>

    <div class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {services.map((s) => (
        <div class="rounded-xl border p-5">
          <h3 class="text-lg font-semibold">{s.title}</h3>
          <p class="mt-2 text-sm opacity-80">{s.desc}</p>
        </div>
      ))}
    </div>

    <div class="mt-12 rounded-xl border p-6 text-center">
      <h2 class="text-xl font-semibold">Ready to upgrade your mailboxes?</h2>
      <p class="mt-2 opacity-80">Get a quick site review and quote from a licensed installer.</p>
      <div class="mt-4 flex items-center justify-center gap-3">
        <a href="/" class="rounded-md border px-4 py-2">Get a Quote</a>
        <a href="tel:+16194601487" class="rounded-md border px-4 py-2">Call Now</a>
      </div>
    </div>

    <div class="mt-12">
      <h2 class="text-2xl font-semibold">FAQs</h2>
      <div class="mt-4 divide-y rounded-xl border">
        {faqs.map((f) => (
          <details class="p-4">
            <summary class="cursor-pointer text-base font-medium">{f.q}</summary>
            <div class="mt-2 text-sm opacity-80">{f.a}</div>
          </details>
        ))}
      </div>
    </div>
  </section>
</Base>
EOF

