---
import Base from "../../layouts/Base.astro";

const title = "Water Damage Restoration | San Diego Commercial Mailbox";
const description = "Emergency water damage cleanup, dry-out, and restoration. Fast response and transparent pricing.";
const url = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined;
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Water Damage Restoration",
  "areaServed": [{ "@type": "AdministrativeArea", "name": "San Diego, CA" }],
  "provider": { "@type": "LocalBusiness", "name": "San Diego Commercial Mailbox", "url": Astro.site ? new URL("/", Astro.site).toString() : "/" },
  "url": url
};
---

<Base {title} {description} jsonLd={jsonLd}>
  <nav aria-label="Breadcrumb" class="mb-4 text-sm">
    <a href="/" class="opacity-70 hover:opacity-100">Home</a>
    <span class="px-2">/</span>
    <a href="/services" class="opacity-70 hover:opacity-100">Services</a>
    <span class="px-2">/</span>
    <span class="opacity-100">Water Damage Restoration</span>
  </nav>

  <h1 class="text-3xl font-semibold mb-4">Water Damage Restoration</h1>
  <p class="mb-8 opacity-80">Emergency mitigation, water extraction, structural dry-out, and rebuild coordination. Same-day response where available.</p>

  <div class="grid gap-8 lg:grid-cols-3">
    <div class="lg:col-span-2">
      <h2 class="text-xl font-medium mb-3">Whatâ€™s included</h2>
      <ul class="list-disc pl-5 space-y-2 mb-8">
        <li>Rapid on-site assessment and moisture mapping</li>
        <li>Water extraction and HEPA filtration</li>
        <li>Dehumidification, monitoring, and documentation</li>
        <li>Direct insurance coordination on request</li>
      </ul>

      <h2 class="text-xl font-medium mb-3">Service areas</h2>
      <p class="mb-6 opacity-80">Coverage across North County and greater San Diego.</p>
      <a href="/service-areas/jupiter-fl" class="underline">Example area page</a>
    </div>

    <aside class="rounded-xl border p-6">
      <div class="text-lg font-medium mb-2">Need help now?</div>
      <p class="text-sm opacity-80 mb-4">Request a priority call back.</p>
      <a href="/contact" class="inline-flex items-center rounded-lg px-4 py-2 text-sm font-medium bg-gray-900 text-white hover:opacity-90">Request Service</a>
    </aside>
  </div>
</Base>
