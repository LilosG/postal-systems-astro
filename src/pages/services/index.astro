---
import Base from "../../layouts/Base.astro";

const title = "Services | San Diego Commercial Mailbox";
const description = "Full-stack commercial mailbox installs plus allied home-service offerings. Same theme, clean routing.";
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Services",
  "url": Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined,
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Home", "item": Astro.site ? new URL("/", Astro.site).toString() : "/" },
      { "@type": "ListItem", "position": 2, "name": "Services" }
    ]
  }
};
---

<Base {title} {description} jsonLd={jsonLd}>
  <h1 class="text-3xl font-semibold mb-6">Services</h1>
  <p class="mb-8 opacity-80">Choose a service below. Each page uses the same layout, header, and footer for visual consistency.</p>

  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <a href="/services/water-damage-restoration" class="block rounded-xl border p-6 hover:shadow-md transition">
      <h2 class="text-lg font-medium mb-2">Water Damage Restoration</h2>
      <p class="text-sm opacity-80 mb-4">Emergency response, mitigation, and dry-out.</p>
      <span class="inline-flex rounded-lg px-3 py-2 text-sm bg-gray-900 text-white">View service</span>
    </a>
    <a href="/services/mailbox-installation" class="block rounded-xl border p-6 hover:shadow-md transition">
      <h2 class="text-lg font-medium mb-2">Mailbox Installation</h2>
      <p class="text-sm opacity-80 mb-4">CBU, pedestal, and wall-mount solutions.</p>
      <span class="inline-flex rounded-lg px-3 py-2 text-sm bg-gray-900 text-white">View service</span>
    </a>
    <a href="/service-areas" class="block rounded-xl border p-6 hover:shadow-md transition">
      <h2 class="text-lg font-medium mb-2">See Service Areas</h2>
      <p class="text-sm opacity-80 mb-4">Find coverage near you.</p>
      <span class="inline-flex rounded-lg px-3 py-2 text-sm bg-gray-900 text-white">Browse areas</span>
    </a>
  </div>
</Base>
