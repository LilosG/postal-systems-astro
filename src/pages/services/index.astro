---
import SiteFrame from "../../layouts/SiteFrame.astro";
import HeroSplit from "../../components/HeroSplit.astro";
import TrustBadges from "../../components/TrustBadges.astro";
import StatsStrip from "../../components/StatsStrip.astro";
import CTASection from "../../components/CTASection.astro";

const pageTitle = "Services | Postal Systems";
---
<SiteFrame title={pageTitle}>
  <HeroSplit />
  <TrustBadges />
  <StatsStrip />

  <section class="py-8 md:py-10">
    <div class="container mx-auto max-w-6xl px-4">
      <h2 class="text-xl md:text-2xl font-semibold text-center">Our Services</h2>
      <p class="text-slate-600 text-center mt-2">
        Complete mailbox solutions from installation to maintenance — all USPS-approved and professionally managed.
      </p>

      <div class="mt-6 grid gap-4 md:grid-cols-2">
        <a href="/services/cluster-box-units" class="rounded-xl border border-slate-200 bg-white p-4 hover:shadow-md transition">
          <h3 class="font-semibold">Cluster Box Units (CBU)</h3>
          <p class="text-sm text-slate-600 mt-1">Supply & install — pads & anchors, compliant placement, USPS inspection, keying.</p>
        </a>

        <a href="/services/4c-mailboxes" class="rounded-xl border border-slate-200 bg-white p-4 hover:shadow-md transition">
          <h3 class="font-semibold">4C Mailboxes</h3>
          <p class="text-sm text-slate-600 mt-1">Interior/exterior 4C installs meeting USPS specs — correct heights & approaches, wall or recess.</p>
        </a>

        <a href="/services/parcel-lockers" class="rounded-xl border border-slate-200 bg-white p-4 hover:shadow-md transition">
          <h3 class="font-semibold">Parcel Lockers</h3>
          <p class="text-sm text-slate-600 mt-1">Add-on package lockers for multifamily & commercial; USPS-compliant layouts.</p>
        </a>

        <a href="/services/repairs-lock-changes" class="rounded-xl border border-slate-200 bg-white p-4 hover:shadow-md transition">
          <h3 class="font-semibold">Repairs & Lock Changes</h3>
          <p class="text-sm text-slate-600 mt-1">Doors, hinges, vandalized cores, lock/core changes, tenant keys & replacements.</p>
        </a>

        <a href="/services/maintenance" class="rounded-xl border border-slate-200 bg-white p-4 hover:shadow-md transition">
          <h3 class="font-semibold">Maintenance</h3>
          <p class="text-sm text-slate-600 mt-1">Ongoing plans to keep systems compliant, secure, and operational.</p>
        </a>

        <a href="/services/pedestal-wall-mounted" class="rounded-xl border border-slate-200 bg-white p-4 hover:shadow-md transition">
          <h3 class="font-semibold">Pedestal & Wall-Mounted</h3>
          <p class="text-sm text-slate-600 mt-1">Secure pedestal and wall-mounted units with proper anchoring & weathering.</p>
        </a>

        <a href="/services/ada-compliant-installs" class="rounded-xl border border-slate-200 bg-white p-4 hover:shadow-md transition">
          <h3 class="font-semibold">ADA-Compliant Installs</h3>
          <p class="text-sm text-slate-600 mt-1">Accessible placements and heights to spec for new installs & retrofits.</p>
        </a>

        <a href="/service-areas" class="rounded-xl border border-slate-200 bg-white p-4 hover:shadow-md transition">
          <h3 class="font-semibold">See Service Areas</h3>
          <p class="text-sm text-slate-600 mt-1">Find coverage near you across San Diego County.</p>
        </a>
      </div>
    </div>
  </section>

  <CTASection />
</SiteFrame>
