---
import Base from "@/layouts/Base.astro";
import LovableLayout from "../../layouts/LovableLayout.astro";
const pageTitle = typeof title !== "undefined" ? title : "Postal Systems";
import Layout from "../../layouts/LovableLayout.astro"
---
<Layout>
<LovableLayout title={pageTitle}>
<Base title="Pedestal & Wall-Mounted Boxes">
  <section class="mx-auto max-w-6xl py-10">
    <h1 class="text-3xl font-semibold tracking-tight">Pedestal &amp; Wall-Mounted Boxes</h1>
    <p class="mt-2 opacity-80">Neighborhood CBUs, HOA upgrades, wall sets, and replacements.</p>
    <ul class="mt-6 list-disc pl-6 space-y-1">
      <li>Replacement of vandalized or weathered units</li>
      <li>Finish matching and model continuity</li>
      <li>Quick swap with minimal downtime</li>
    </ul>
    <div class="mt-8"><a href="/contact" class="rounded-md border px-4 py-2">Request a Quote</a></div>
  </section>
</Base>
</LovableLayout>
</Layout>
