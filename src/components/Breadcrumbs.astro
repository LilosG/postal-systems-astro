---
interface Crumb { href?: string; label: string }
const { items = [] } = Astro.props as { items?: Crumb[] };
---
{items.length > 0 && (
  <nav aria-label="Breadcrumb" class="mb-6 text-sm">
    <ol class="flex flex-wrap items-center gap-1 opacity-80">
      {items.map((c, i) => (
        <li class="flex items-center">
          {c.href ? <a href={c.href} class="hover:opacity-100">{c.label}</a> : <span>{c.label}</span>}
          {i < items.length - 1 && <span class="px-2">/</span>}
        </li>
      ))}
    </ol>
  </nav>
)}
